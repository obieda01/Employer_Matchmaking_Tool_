
@{
    ViewBag.Title = "AddAStudentLogin";
}

<h2>Create A Student Login</h2>

<form action="UpdateStudentLogin" method="post">
    <div>
        <div class="col-sm-5 col-sm-offset-1">
            <div class="form-group label-floating">
                <table>
                    <tr>
                        <td>@Html.Label("Add the student to which cohort's matchmaking event : ")</td>
                        <td>@Html.DropDownList("matchmakingId", (List<SelectListItem>)ViewBag.Arrangements)</td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="col-sm-5 col-sm-offset-2">
            <div class="form-group label-floating">
            </div>
        </div>
        <div class="col-sm-5 col-sm-offset-1">
            <div class="form-group label-floating">
                <label class="control-label">Student Name </label>
                <input type="text" name="studentName" class="form-control" id="exampleInputEmail1">
            </div>
        </div>
        <div class="col-sm-5 col-sm-offset-1">
            <div class="form-group label-floating">
                <label class="control-label">Student's User Name </label>
                <input type="text" name="userName" class="form-control" id="exampleInputEmail1">
            </div>
        </div>

        <div class="col-sm-5 col-sm-offset-1">
            <div class="form-group label-floating">
                <label class="control-label">Student's email address </label>
                <input type="text" name="emailAddress" class="form-control" id="exampleInputEmail1">
            </div>
        </div>
        <div class="col-sm-5 col-sm-offset-1">
            <div class="form-group label-floating">
                <label class="control-label">Confirm student's email address</label>
                <input type="text" name="emailAddress2" class="form-control" id="exampleInputEmail1">
            </div>
        </div>
        @{string loggedInUserName = ViewBag.userName; }
        @Html.Hidden("userName", loggedInUserName)
        <div class="col-sm-5 col-sm-offset-1">
            <div class="form-group label-floating">
                <table>
                    <tr>
                        <td>@Html.Label("Student's Programming Language: ")</td>
                        <td>
                            @Html.DropDownList("languageId", new SelectList(new List<Object>{new { value = 1 , text = "Java" },
                    new { value = 2 , text = ".Net"}}, "value", "text", 2))
                        </td>
                    </tr>
                    <tr>
                        <td><br/><br/> * Initial Passwords are set to "Password"</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <div class="col-sm-10">
        <div class="pull-left">
     @* <input value="Submit" type="submit" id="inputButton" />*@

            <input value="Submit" type="submit" class='btn btn-fill btn-success btn-wd btn' id="inputButton" />

           @* <input type='button'  id="inputButton" class='btn btn-fill btn-primary btn-wd btn-sm' name='Submit' value='Submit' />*@
        </div>
    </div>


</form>
