@using Capstone.Web.Models;

@model List<EmployerTeam>

@{
    ViewBag.Title = "AssignRoom";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>
    AHMAD -
   Do we make this into two pages where they pick the matchmaking arrangement first and then we display the assign a room?
    Or do we send one big model with all of the arrangments and their perspective employer teams and have it dynamically update 
    when the select a particular arrangement?
</h2>

<h2>UpdateRooms</h2>


<div>@Html.Label("Please pick a matchmaking event:")</div>
<div>@Html.DropDownList("arrangement", (List<SelectListItem>)ViewBag.Arrangements)</div>

@using (Html.BeginForm("UpdateRoom", "Staff"))
{

    <table>
        <tr>
            <td>@Html.Label("Employer Name")</td>
            <td>@Html.Label("Team Number")</td>
            <td>@Html.Label("Assign Room")</td>
        </tr>
        @foreach (EmployerTeam e in Model)
        {
            <tr>
                <td>@Html.Label(e.EmployerName)</td>
                <td>@Html.Label(e.TeamId.ToString())</td>
                <td>@Html.TextBox(e.EmployerName+e.TeamId+"assignedRoom", e.AssignedRoom)</td>
            </tr>
        }
      
    </table>

    <input value="Update" type="submit" id="inputButton" />
}

