
@{
    ViewBag.Title = "Create Cohort's Matchmaking Arrangement";
}

<h2>Create A New Arrangement</h2>


<form action="UpdateArrangement" method="post">

    @*@using (Html.BeginForm("UpdateArrangement", "Staff"))
    {*@
    @{string loggedInUserName = ViewBag.userName; }
    @Html.Hidden("userName", loggedInUserName);
        <table>
            <tr>
                <td>@Html.Label("Which Location are you scheduling for? ")</td>
                <td>
                    @Html.DropDownList("location", new SelectList(new List<Object>{new { value = "Columbus" , text = "Columbus" },
                    new { value = "Cleveland" , text = "Cleveland"}}, "value", "text", 2))
            </td>
        </tr>
        <tr>
            <td>@Html.Label("What is the Cohort Number: ")</td>
            <td>@Html.TextBox("cohortNumber")</td>
        </tr>
        <tr>
            <td>@Html.Label("Which season are you scheduling for? ")</td>
            <td>
                @Html.DropDownList("season", new SelectList(new List<Object>{new { value = "Fall" , text = "Fall" }, new { value = "Winter" , text = "Winter" },
                    new { value = "Spring" , text = "Spring"}, new { value = "Summer" , text = "Summer" },}, "value", "text", 2))
            </td>
        </tr>
        <tr>
            <td>@Html.Label("How many employer choices will the students get : ")</td>
            <td>@Html.TextBox("numberOfStudentChoices")</td>
        </tr>

    </table>

    <div class="col-sm-10">
        <div class="pull-left">
            @* <input value="Submit" type="submit" id="inputButton" />*@

            <input value="Submit" type="submit" class='btn btn-fill btn-success btn-wd btn' id="inputButton" />

            @* <input type='button'  id="inputButton" class='btn btn-fill btn-primary btn-wd btn-sm' name='Submit' value='Submit' />*@
        </div>
    </div>
    @*}*@
    </form>
