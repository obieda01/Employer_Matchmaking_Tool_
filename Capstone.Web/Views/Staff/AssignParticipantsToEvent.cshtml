@using Capstone.Web.Models;
@model List<Event>

    @{
        ViewBag.Title = "Assign Participanting Students and Employers To Event";
       
    }

    <h2>@ViewBag.Title </h2>
<form action="PickArrangement" method="post">
    @foreach (Event e in Model)
    {
        <h4>Event Date @e.EventDate</h4>
        <p>Choose Employers for this Event</p>
        foreach (EmployerTeam et in e.AllEmployers)
        {
            @Html.CheckBox("Employers", false, new { Value = et.TeamId })
            <label>@et.EmployerName</label>
        }
        <br />
        <p>Choose Students for this Event</p>
        foreach (Student s in e.AllStudents)
        {
            @Html.CheckBox("Student", false, new { Value = s.StudentId })
            <label>@s.StudentName</label>

        }
        <br />
        <br />

    }
    <div class="col-sm-10">
        <div class="pull-left">
            @* <input value="Submit" type="submit" id="inputButton" />*@

            <input value="Submit" type="submit" class='btn btn-fill btn-success btn-wd btn' id="inputButton" />

            @* <input type='button'  id="inputButton" class='btn btn-fill btn-primary btn-wd btn-sm' name='Submit' value='Submit' />*@
        </div>
    </div>
</form>