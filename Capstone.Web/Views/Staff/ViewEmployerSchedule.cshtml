@using Capstone.Web.Models;

@model List<Interview>

@{
    ViewBag.Title = "ViewEmployerSchedule";
}

<h2>View Employer Schedule</h2>

<div>@Html.Label("Please pick a matchmaking event:")</div>
<div>@Html.DropDownList("matchmakingId", (List<SelectListItem>)ViewBag.Arrangements)</div>

<div>@Html.Label("Which employer's schedule do you want to see:")</div>
<div>@Html.DropDownList("employer", (List<SelectListItem>)ViewBag.EmployerNames)</div>


<div>
    <div class="fresh-table toolbar-color-green">
        <!--    Available colors for the full background: full-color-blue, full-color-azure, full-color-green, full-color-red, full-color-orange
                Available colors only for the toolbar: toolbar-color-blue, toolbar-color-azure, toolbar-color-green, toolbar-color-red, toolbar-color-orange
        -->

        <table id="fresh-table" class="table dataTable">
            <thead>
            <th data-field="city" data-sortable="true">Employer Name</th>

            <th data-field="salary" data-sortable="true">Team Id</th>
            <th data-field="name" data-sortable="true">Student Name</th>

            <th data-field="Start_Time" data-sortable="true">Event Date</th>
            <th data-field="Start_Time" data-sortable="true">Start Time</th>
            <th data-field="Assigned_Room" data-sortable="true">Assigned Room</th>
            </thead>



            <tbody>
                @foreach (Interview i in Model)
                {
                    <tr>
                        <td> @i.EmployerName</td>
                        <td> @i.TeamId</td>
                        <td> @i.StudentName</td>
                        <td> @i.EventDate</td>
                        <td> @i.StartTime</td>
                        <td> @i.AssignedRoom </td>
                    </tr>
                }

            </tbody>
        </table>
        <script type="text/javascript" src="~/Scripts/js/bootstrap-table.js"></script>
       
    </div>

   
</div>
   