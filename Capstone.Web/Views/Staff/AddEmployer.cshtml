
@{
    ViewBag.Title = "AddEmployer";
}

<h2>Add Employer</h2>

<form action="UpdateEmployer" method="post">

    @{string loggedInUserName = ViewBag.userName; }
    @Html.Hidden("userName", loggedInUserName)

    <div>
        <div class="col-sm-5 col-sm-offset-1">
            <div class="form-group label-floating">
                <label class="control-label">Employer Name </label>
                <input type="text" name="employerName" class="form-control" id="">
            </div>
        </div>
        <div class="col-sm-5 col-sm-offset-1">
            <div class="form-group label-floating">
                <label class="control-label">Employer Summary</label>
                <input type="text" name="employerSummary" class="form-control" id="">
            </div>
        </div>
    </div>
    <div class="col-sm-10">
        <div class="pull-left">
            <input value="Update" type="submit" class='btn btn-fill btn-success btn-wd btn' id="inputButton" />
        </div>
    </div>

</form>


